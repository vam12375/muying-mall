# Docker Compose 环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# ==================== 端口配置 ====================
# MySQL端口
MYSQL_PORT=3306
# Redis端口
REDIS_PORT=6379
# RabbitMQ端口
RABBITMQ_PORT=5672
# RabbitMQ管理界面端口
RABBITMQ_MANAGEMENT_PORT=15672
# 后端应用端口
BACKEND_PORT=8080

# ==================== 数据库配置 ====================
# MySQL root密码
MYSQL_ROOT_PASSWORD=muying123456

# ==================== Redis配置 ====================
# Redis密码（留空表示无密码）
REDIS_PASSWORD=

# ==================== RabbitMQ配置 ====================
# RabbitMQ用户名
RABBITMQ_USER=guest
# RabbitMQ密码
RABBITMQ_PASSWORD=guest

# ==================== Spring配置 ====================
# Spring运行环境（dev/prod）
SPRING_PROFILES_ACTIVE=prod

# ==================== JWT配置 ====================
# JWT密钥（生产环境请务必修改）
JWT_SECRET=your-secret-key-change-this-in-production

# ==================== 支付宝配置 ====================
# 支付宝应用ID
ALIPAY_APP_ID=
# 支付宝应用私钥
ALIPAY_PRIVATE_KEY=
# 支付宝公钥
ALIPAY_PUBLIC_KEY=
